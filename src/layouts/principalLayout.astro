---
import "../scss/jade_styles.scss";
import TopNav from "../chunks/topNav.astro";
import Footer from "../chunks/footer.astro";
const titulo = 'Jade Social Agency | Eventos Exclusivos & Diseño de Invitaciones en Saltillo';
const descripcion = 'Especialistas en coordinación de eventos sociales, invitaciones exclusivas, floristería y decoración minimalista en Saltillo. Más de 20 años creando momentos inolvidables.';
const palabras_claves = 'eventos sociales, invitaciones de boda, invitaciones digitales, coordinación de eventos, floristería, decoración minimalista, charcutería de lujo, Saltillo, Monterrey, Ramos, Ramos Arizpe, Parras, Parras de la Fuente, Arteaga';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="https://www.jadesocialagency.com/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={ descripcion } />
        <!-- Bootstrap -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
		<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
		<title>{ titulo }</title>
		<meta name="description" content={ descripcion }>
		<meta name="keywords" content={ palabras_claves }>

		<!-- Open Graph Meta Tags -->
		<meta property="og:title" content="Jade Social Agency | Eventos Exclusivos & Diseño de Invitaciones">
		<meta property="og:description" content="Creamos experiencias únicas a través de eventos exclusivos, invitaciones personalizadas y decoración minimalista en Saltillo.">
		<meta property="og:image" content="https://www.jadesocialagency.com/thumb.webp">
		<meta property="og:url" content="https://www.jadesocialagency.com">
		<meta property="og:type" content="website">
		<!-- Twitter Card Meta Tags -->
		<meta name="twitter:card" content="summary_large_image">
		<meta name="twitter:title" content="Jade Social Agency | Eventos Exclusivos">
		<meta name="twitter:description" content="Eventos exclusivos e invitaciones personalizadas en Saltillo. Donde la exclusividad se une al detalle.">
		<meta name="twitter:image" content="https://www.jadesocialagency.com/thumb.webp">
	</head>
	<body>
        <div class="j-back"></div>
        <TopNav />
		<slot />
        <Footer />

        <script is:inline src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
		<script is:inline src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
		<script type="application/ld+json">
		{
			"@context": "https://schema.org",
			"@type": "EventPlanningBusiness",
			"name": "Jade Social Agency",
			"image": "URL-de-tu-logo.jpg",
			"description": "Especialistas en coordinación de eventos sociales, invitaciones exclusivas, floristería y decoración minimalista.",
			"address": {
				"@type": "PostalAddress",
				"streetAddress": "-",
				"addressLocality": "Ramos Arizpe",
				"addressRegion": "Coahuila",
				"postalCode": "25900",
				"addressCountry": "MX"
			},
			"geo": {
				"@type": "GeoCoordinates",
				"latitude": "25.5466257",
				"longitude": "-100.9827951"
			},
			"url": "https://www.jadesocialagency.com",
			"telephone": "844 427 3795",
			"priceRange": "$$",
			"openingHoursSpecification": {
			"@type": "OpeningHoursSpecification",
			"dayOfWeek": [
				"Monday",
				"Tuesday",
				"Wednesday",
				"Thursday",
				"Friday"
			],
			"opens": "09:00",
			"closes": "18:00"
			},
			"sameAs": [
			"https://vntinv.com/3Kqk4v",
			"https://vntinv.com/E7fMsI",
			"https://vntinv.com/VniT0S"
			],
			"servesCuisine": "Charcutería de lujo",
			"hasOfferCatalog": {
				"@type": "OfferCatalog",
				"name": "Servicios",
				"itemListElement": [
					{
					"@type": "OfferCatalog",
					"name": "Coordinación de Eventos Sociales"
					},
					{
					"@type": "OfferCatalog",
					"name": "Diseño de Invitaciones y Tarjetería Social"
					},
					{
					"@type": "OfferCatalog",
					"name": "Floristería y Decoración"
					},
					{
					"@type": "OfferCatalog",
					"name": "Charcutería de Lujo"
					}
				]
			}
		}
		</script>
		<script is:inline>
			AOS.init({
				duration: 1000,
			});
		</script>
	</body>
</html>
